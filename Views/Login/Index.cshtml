@model Turnos.Models.Login

@{
    Layout = null;

}

 <!--Import Google Icon Font-->
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<!--Import materialize.css-->
<link type="text/css" rel="stylesheet" href="~/css/materialize.min.css"  media="screen,projection"/>
<link rel="stylesheet" href="~/css/site.css" />
<script type="text/javascript" src="~/js/materialize.min.js"></script>

<div class="container"> <!--Se coloca todo en un contenedor para que quede centrado-->
    <h4>Login</h4> <!--Titulo-->
    <hr />
    <br />
    <!--El atributo asp-action="Login" es el nombre del EndPoint que se usara-->
    <form class="col s12" asp-action="Login"> 
        <!--Esta etiquta con su atributo nos permite usar las validaciones definidas con las datra annotation. -->
        <div asp-validation-summary="ModelOnly"></div>
        <!--Campos en el formulario.-->

        <div class="row">
            <div class="input-field col s6">
                <i class="material-icons prefix">person_pin</i>
                <input asp-for="Usuario" type="text">
                <label asp-for="Usuario"></label>
                <span asp-validation-for="Usuario"></span>
            </div>
        </div>

        <div class="row">
            <div class="input-field col s6">
                <i class="material-icons prefix">vpn_key</i>
                <input asp-for="Password" type="password">
                <label asp-for="Password"></label>
                <span asp-validation-for="Password"></span>
            </div>
        </div>
        <span class="red-text">@ViewBag.errorLogin</span>
        <br />
        <br />
        <div class="row">
            <div class="col s6 m6">
                <button class="btn waves-effect waves-light cyan accent-4" type="submit" name="action">Ingresar
                    <i class="material-icons right">send</i>
                </button>
            </div>
        </div>

    </form>
</div>
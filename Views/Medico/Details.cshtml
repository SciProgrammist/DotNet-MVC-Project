    <hr />
     <div class="row">
            <div class="col s12 m6">
                <div class="card hoverable blue darken-1">
                    <div class="card-content white-text">
                        <span class="card-title">

                            <h5><b>@Html.DisplayFor(model => model.Nombre), @Html.DisplayFor(model =>
                                    model.Apellido)</b></h5>
                        </span>

                        <dt>
                            <h6>@Html.DisplayNameFor(model => model.Nombre) : @Html.DisplayFor(model => model.Nombre)
                            </h6>
                        </dt>
                        <hr />
                        <dt>
                            <h6>@Html.DisplayNameFor(model => model.Apellido) : @Html.DisplayFor(model =>
                                model.Apellido) </h6>
                        </dt>
                        <hr />
                        <dt>
                            <h6>@Html.DisplayNameFor(model => model.Direccion) : @Html.DisplayFor(model =>
                                model.Direccion) </h6>
                        </dt>
                        <hr />
                        <dt>
                            <h6>@Html.DisplayNameFor(model => model.Telefono) : @Html.DisplayFor(model =>
                                model.Telefono) </h6>
                        </dt>
                        <hr />
                        <dt>
                            <h6>@Html.DisplayNameFor(model => model.Email) : @Html.DisplayFor(model => model.Email)
                            </h6>
                        </dt>
                        <hr />
                        <dt>
                            <h6>@Html.DisplayNameFor(model => model.HorarioAtencionDesde) : @Html.DisplayFor(model =>
                                model.HorarioAtencionDesde) </h6>
                        </dt>
                        <hr />
                        <dt>
                            <h6>@Html.DisplayNameFor(model => model.HorarioAtencionHasta) : @Html.DisplayFor(model =>
                                model.HorarioAtencionHasta) </h6>
                        </dt>
                        <hr />
                    </div>
                    <div class="card-action blue-grey darken-2">
                        <form>
                            <input type="hidden" asp-for="IdMedico" />
                            <a asp-action="Edit" asp-route-id="@Model.IdMedico">Editar</a>
                            <a asp-action="Index" >Volver</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>